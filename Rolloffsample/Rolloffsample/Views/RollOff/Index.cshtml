@model IEnumerable<Rolloffsample.Models.RollOffTable>

<form asp-controller="RollOff" asp-action="Search" method="get">
    <p><input type ="search" placeholder="Enter Employee GGID or Email or Name" 
              name="ggid" class="rounded" style="width:500px"/>
       <input type ="submit" value="Search" class="btn-outline-dark">
    </p>
</form>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>Country</th>
            <th>Global Group Id</th>
            <th>Name</th>
            <th>Local Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Country</td>
                <td>@item.GlobalGroupId</td>
                <td>@item.Name</td>
                <td>@item.LocalGrade</td>
            </tr>
        }
    </tbody>
</table>
